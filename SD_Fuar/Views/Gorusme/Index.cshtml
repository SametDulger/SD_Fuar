@model IEnumerable<SD_Fuar.Models.Gorusme>

@{
    ViewData["Title"] = "Görüşmeler";
}

<h1>Görüşmeler</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Görüşme Ekle</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Firma</th>
            <th>Fuar</th>
            <th>Salon</th>
            <th>Görüşen Kişi</th>
            <th>Tarih</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@item.Firma?.Ad</td>
            <td>@item.Fuar?.Ad</td>
            <td>@item.Salon?.Ad</td>
            <td>@item.GorusenKisi</td>
            <td>@item.Tarih.ToString("dd.MM.yyyy")</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Düzenle</a> |
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detay</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table> 