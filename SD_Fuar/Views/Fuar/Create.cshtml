@model SD_Fuar.Models.Fuar

@{
    ViewData["Title"] = "Yeni Fuar Ekle";
}

<h1>Yeni Fuar Ekle</h1>

<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Ad" class="control-label">Fuar Adı</label>
                <input asp-for="Ad" class="form-control" />
                <span asp-validation-for="Ad" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Ulke" class="control-label">Ülke</label>
                <input asp-for="Ulke" class="form-control" />
                <span asp-validation-for="Ulke" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Sehir" class="control-label">Şehir</label>
                <input asp-for="Sehir" class="form-control" />
                <span asp-validation-for="Sehir" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="BaslangicTarihi" class="control-label">Başlangıç Tarihi</label>
                <input asp-for="BaslangicTarihi" class="form-control" type="date" />
                <span asp-validation-for="BaslangicTarihi" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="BitisTarihi" class="control-label">Bitiş Tarihi</label>
                <input asp-for="BitisTarihi" class="form-control" type="date" />
                <span asp-validation-for="BitisTarihi" class="text-danger"></span>
            </div>
            
            <div class="form-group mt-3">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 