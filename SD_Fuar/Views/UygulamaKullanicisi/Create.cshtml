@model SD_Fuar.Models.UygulamaKullanicisi

@{
    ViewData["Title"] = "Yeni Kullanıcı Ekle";
}

<h1>Yeni Kullanıcı Ekle</h1>

<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="KullaniciAdi" class="control-label">Kullanıcı Adı</label>
                <input asp-for="KullaniciAdi" class="form-control" />
                <span asp-validation-for="KullaniciAdi" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Sifre" class="control-label">Şifre</label>
                <input asp-for="Sifre" class="form-control" type="password" />
                <span asp-validation-for="Sifre" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Rol" class="control-label">Rol</label>
                <select asp-for="Rol" class="form-control">
                    <option value="">-- Seçin --</option>
                    <option value="Satış Personeli">Satış Personeli</option>
                    <option value="Satış Müdürü">Satış Müdürü</option>
                    <option value="Yönetim Kurulu">Yönetim Kurulu</option>
                    <option value="Admin">Admin</option>
                </select>
                <span asp-validation-for="Rol" class="text-danger"></span>
            </div>
            
            <div class="form-group mt-3">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 