@model SD_Fuar.Models.Salon

@{
    ViewData["Title"] = "Yeni Salon Ekle";
}

<h1>Yeni Salon Ekle</h1>

<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Ad" class="control-label">Salon Adı</label>
                <input asp-for="Ad" class="form-control" />
                <span asp-validation-for="Ad" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="FuarId" class="control-label">Fuar</label>
                <select asp-for="FuarId" class="form-control" asp-items="ViewBag.FuarId">
                    <option value="">-- Fuar Seçin --</option>
                </select>
                <span asp-validation-for="FuarId" class="text-danger"></span>
            </div>
            
            <div class="form-group mt-3">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 