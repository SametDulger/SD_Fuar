@model IEnumerable<SD_Fuar.Models.MuhasebeKaydi>

@{
    ViewData["Title"] = "Muhasebe Kayıtları";
}

<h1>Muhasebe Kayıtları</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Kayıt Ekle</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Tarih</th>
            <th>Açıklama</th>
            <th>Tutar</th>
            <th>Döviz</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@item.Tarih.ToString("dd.MM.yyyy")</td>
            <td>@item.Aciklama</td>
            <td>@item.Tutar</td>
            <td>@item.Doviz</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Düzenle</a> |
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detay</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table> 