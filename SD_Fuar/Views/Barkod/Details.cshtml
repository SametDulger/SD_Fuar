@model SD_Fuar.Models.Barkod

@{
    ViewData["Title"] = "Barkod Detayı";
}

<h1>Barkod Detayı</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">Barkod Kodu</dt>
        <dd class="col-sm-10">@Model.BarkodKodu</dd>
        
        <dt class="col-sm-2">Tip</dt>
        <dd class="col-sm-10">@Model.Tip</dd>
        
        <dt class="col-sm-2">Ziyaretçi</dt>
        <dd class="col-sm-10">@(Model.Ziyaretci?.Ad + " " + Model.Ziyaretci?.Soyad)</dd>
        
        <dt class="col-sm-2">Oluşturma Tarihi</dt>
        <dd class="col-sm-10">@Model.OlusturmaTarihi.ToString("dd.MM.yyyy HH:mm")</dd>
        
        <dt class="col-sm-2">Geçerlilik Tarihi</dt>
        <dd class="col-sm-10">@(Model.GecerlilikTarihi?.ToString("dd.MM.yyyy") ?? "-")</dd>
        
        <dt class="col-sm-2">Kullanıldı mı?</dt>
        <dd class="col-sm-10">@(Model.KullanildiMi ? "Evet" : "Hayır")</dd>
        
        @if (Model.KullanilmaTarihi.HasValue)
        {
            <dt class="col-sm-2">Kullanılma Tarihi</dt>
            <dd class="col-sm-10">@Model.KullanilmaTarihi.Value.ToString("dd.MM.yyyy HH:mm")</dd>
        }
        
        <dt class="col-sm-2">Durum</dt>
        <dd class="col-sm-10">@Model.Durum</dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Düzenle</a>
    <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
</div> 