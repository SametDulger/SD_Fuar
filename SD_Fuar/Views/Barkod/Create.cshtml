@model SD_Fuar.Models.Barkod

@{
    ViewData["Title"] = "Yeni Barkod Oluştur";
}

<h1>Yeni Barkod Oluştur</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Tip" class="control-label">Tip</label>
                <select asp-for="Tip" class="form-control">
                    <option value="">Seçiniz</option>
                    <option value="Davetiye">Davetiye</option>
                    <option value="Bilet">Bilet</option>
                </select>
                <span asp-validation-for="Tip" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="ZiyaretciId" class="control-label">Ziyaretçi</label>
                <select asp-for="ZiyaretciId" class="form-control">
                    <option value="">Seçiniz</option>
                    @foreach (var ziyaretci in ViewBag.Ziyaretciler)
                    {
                        <option value="@ziyaretci.Id">@ziyaretci.Ad @ziyaretci.Soyad - @ziyaretci.FirmaAdi</option>
                    }
                </select>
                <span asp-validation-for="ZiyaretciId" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="GecerlilikTarihi" class="control-label">Geçerlilik Tarihi</label>
                <input asp-for="GecerlilikTarihi" class="form-control" type="date" />
                <span asp-validation-for="GecerlilikTarihi" class="text-danger"></span>
            </div>
            
            <div class="form-group mt-3">
                <input type="submit" value="Oluştur" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 