@model SD_Fuar.Models.Stand

@{
    ViewData["Title"] = "Stand Sil";
}

<h1>Stand Sil</h1>

<div class="alert alert-danger">
    <h3>Bu standı silmek istediğinizden emin misiniz?</h3>
</div>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Kod)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Kod)</dd>
        
        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.En)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.En) m</dd>
        
        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Boy)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Boy) m</dd>
        
        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Metrekare)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Metrekare) m²</dd>
        
        <dt class="col-sm-3">Salon</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Salon.Ad)</dd>
        
        <dt class="col-sm-3">Fuar</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Salon.Fuar.Ad)</dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
    </form>
</div> 