@model SD_Fuar.Models.Teklif
@{
    ViewData["Title"] = "Teklif Düzenle";
}
<h1>Teklif Düzenle</h1>
<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="FirmaId" class="control-label">Firma</label>
                <input asp-for="FirmaId" class="form-control" />
                <span asp-validation-for="FirmaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FuarId" class="control-label">Fuar</label>
                <input asp-for="FuarId" class="form-control" />
                <span asp-validation-for="FuarId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SalonId" class="control-label">Salon</label>
                <input asp-for="SalonId" class="form-control" />
                <span asp-validation-for="SalonId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StandId" class="control-label">Stand</label>
                <input asp-for="StandId" class="form-control" />
                <span asp-validation-for="StandId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TeklifTarihi" class="control-label">Teklif Tarihi</label>
                <input asp-for="TeklifTarihi" class="form-control" type="date" />
                <span asp-validation-for="TeklifTarihi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Metrekare" class="control-label">Metrekare</label>
                <input asp-for="Metrekare" class="form-control" />
                <span asp-validation-for="Metrekare" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BirimFiyat" class="control-label">Birim Fiyat</label>
                <input asp-for="BirimFiyat" class="form-control" />
                <span asp-validation-for="BirimFiyat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Doviz" class="control-label">Döviz</label>
                <input asp-for="Doviz" class="form-control" />
                <span asp-validation-for="Doviz" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DovizKuru" class="control-label">Döviz Kuru</label>
                <input asp-for="DovizKuru" class="form-control" />
                <span asp-validation-for="DovizKuru" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VadeSayisi" class="control-label">Vade Sayısı</label>
                <input asp-for="VadeSayisi" class="form-control" />
                <span asp-validation-for="VadeSayisi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OdemePlani" class="control-label">Ödeme Planı</label>
                <input asp-for="OdemePlani" class="form-control" />
                <span asp-validation-for="OdemePlani" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SonGecerlilikTarihi" class="control-label">Son Geçerlilik Tarihi</label>
                <input asp-for="SonGecerlilikTarihi" class="form-control" type="date" />
                <span asp-validation-for="SonGecerlilikTarihi" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 