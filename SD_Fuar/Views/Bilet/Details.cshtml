@model SD_Fuar.Models.Bilet

@{
    ViewData["Title"] = "Bilet Detayı";
}

<h1>Bilet Detayı</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">Bilet Kodu</dt>
        <dd class="col-sm-10">@Model.BiletKodu</dd>
        
        <dt class="col-sm-2">Tip</dt>
        <dd class="col-sm-10">@Model.Tip</dd>
        
        <dt class="col-sm-2">Fiyat</dt>
        <dd class="col-sm-10">@Model.Fiyat.ToString("N2") @Model.Doviz</dd>
        
        <dt class="col-sm-2">Döviz</dt>
        <dd class="col-sm-10">@Model.Doviz</dd>
        
        <dt class="col-sm-2">Ziyaretçi</dt>
        <dd class="col-sm-10">@(Model.Ziyaretci?.Ad + " " + Model.Ziyaretci?.Soyad)</dd>
        
        <dt class="col-sm-2">Fuar</dt>
        <dd class="col-sm-10">@Model.Fuar?.Ad</dd>
        
        <dt class="col-sm-2">Satış Tarihi</dt>
        <dd class="col-sm-10">@Model.SatisTarihi.ToString("dd.MM.yyyy HH:mm")</dd>
        
        <dt class="col-sm-2">Geçerlilik Tarihi</dt>
        <dd class="col-sm-10">@Model.GecerlilikTarihi.ToString("dd.MM.yyyy")</dd>
        
        <dt class="col-sm-2">Satış Personeli</dt>
        <dd class="col-sm-10">@Model.SatisPersoneli</dd>
        
        <dt class="col-sm-2">Kullanıldı mı?</dt>
        <dd class="col-sm-10">@(Model.KullanildiMi ? "Evet" : "Hayır")</dd>
        
        @if (Model.KullanilmaTarihi.HasValue)
        {
            <dt class="col-sm-2">Kullanılma Tarihi</dt>
            <dd class="col-sm-10">@Model.KullanilmaTarihi.Value.ToString("dd.MM.yyyy HH:mm")</dd>
        }
        
        <dt class="col-sm-2">Ödeme Tipi</dt>
        <dd class="col-sm-10">@Model.OdemeTipi</dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Düzenle</a>
    <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
</div> 