@model SD_Fuar.Models.Indirim

@{
    ViewData["Title"] = "İndirim Detayı";
}

<h1>İndirim Detayı</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">İndirim Adı</dt>
        <dd class="col-sm-10">@Model.Ad</dd>
        
        <dt class="col-sm-2">Tip</dt>
        <dd class="col-sm-10">@Model.Tip</dd>
        
        @if (Model.Tip == "Yüzde")
        {
            <dt class="col-sm-2">Oran</dt>
            <dd class="col-sm-10">%@Model.Oran</dd>
        }
        else if (Model.Tip == "Sabit Tutar")
        {
            <dt class="col-sm-2">Sabit Tutar</dt>
            <dd class="col-sm-10">@Model.SabitTutar.ToString("N2")</dd>
        }
        
        <dt class="col-sm-2">Firma</dt>
        <dd class="col-sm-10">@(Model.Firma?.Ad ?? "Tüm Firmalar")</dd>
        
        <dt class="col-sm-2">Fuar</dt>
        <dd class="col-sm-10">@(Model.Fuar?.Ad ?? "Tüm Fuarlar")</dd>
        
        <dt class="col-sm-2">Başlangıç Tarihi</dt>
        <dd class="col-sm-10">@Model.BaslangicTarihi.ToString("dd.MM.yyyy")</dd>
        
        <dt class="col-sm-2">Bitiş Tarihi</dt>
        <dd class="col-sm-10">@Model.BitisTarihi.ToString("dd.MM.yyyy")</dd>
        
        <dt class="col-sm-2">Minimum Katılım Sayısı</dt>
        <dd class="col-sm-10">@Model.MinimumKatilimSayisi</dd>
        
        <dt class="col-sm-2">Minimum Tutar</dt>
        <dd class="col-sm-10">@Model.MinimumTutar.ToString("N2")</dd>
        
        <dt class="col-sm-2">Aktif mi?</dt>
        <dd class="col-sm-10">@(Model.AktifMi ? "Evet" : "Hayır")</dd>
        
        <dt class="col-sm-2">Açıklama</dt>
        <dd class="col-sm-10">@Model.Aciklama</dd>
        
        <dt class="col-sm-2">Uygulama Koşulları</dt>
        <dd class="col-sm-10">@Model.UygulamaKosullari</dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Düzenle</a>
    <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
</div> 