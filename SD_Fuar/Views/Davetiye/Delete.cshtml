@model SD_Fuar.Models.Davetiye

@{
    ViewData["Title"] = "Davetiye Sil";
}

<h1>Davetiye Sil</h1>

<h3>Bu davetiyeyi silmek istediğinizden emin misiniz?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">Davetiye Kodu</dt>
        <dd class="col-sm-10">@Model.DavetiyeKodu</dd>
        
        <dt class="col-sm-2">Tip</dt>
        <dd class="col-sm-10">@Model.Tip</dd>
        
        <dt class="col-sm-2">Ziyaretçi</dt>
        <dd class="col-sm-10">@(Model.Ziyaretci?.Ad + " " + Model.Ziyaretci?.Soyad)</dd>
        
        <dt class="col-sm-2">Fuar</dt>
        <dd class="col-sm-10">@Model.Fuar?.Ad</dd>
        
        <dt class="col-sm-2">Oluşturma Tarihi</dt>
        <dd class="col-sm-10">@Model.OlusturmaTarihi.ToString("dd.MM.yyyy HH:mm")</dd>
        
        <dt class="col-sm-2">Durum</dt>
        <dd class="col-sm-10">@Model.Durum</dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
    </form>
</div> 