@model IEnumerable<SD_Fuar.Models.Sozlesme>

@{
    ViewData["Title"] = "Sözleşmeler";
}

<h1>Sözleşmeler</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Sözleşme Ekle</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Firma</th>
            <th>Fuar</th>
            <th>Salon</th>
            <th>Stand</th>
            <th>Tarih</th>
            <th>Metrekare</th>
            <th>Birim Fiyat</th>
            <th>Döviz</th>
            <th>İmza Durumu</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Firma.Ad)</td>
            <td>@Html.DisplayFor(modelItem => item.Fuar.Ad)</td>
            <td>@Html.DisplayFor(modelItem => item.Salon.Ad)</td>
            <td>@Html.DisplayFor(modelItem => item.Stand.Kod)</td>
            <td>@item.Tarih.ToString("dd.MM.yyyy")</td>
            <td>@Html.DisplayFor(modelItem => item.Metrekare) m²</td>
            <td>@Html.DisplayFor(modelItem => item.BirimFiyat)</td>
            <td>@Html.DisplayFor(modelItem => item.Doviz)</td>
            <td>
                @if (item.ImzaDurumu == "Alındı")
                {
                    <span class="badge bg-success">@item.ImzaDurumu</span>
                }
                else
                {
                    <span class="badge bg-warning">@item.ImzaDurumu</span>
                }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Düzenle</a> |
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detay</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table> 